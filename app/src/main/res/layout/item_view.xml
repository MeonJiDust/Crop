<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_list"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/empty_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_list"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="titletitletitletitle"
                android:textSize="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="#3C3B3F"/>
            <TextView
                android:id="@+id/name_list"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:text="등록자: namename"
                android:textSize="18dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#333333"
                android:gravity="right"/>
            <TextView
                android:id="@+id/enroll_date_list"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:text="등록일: 11/20"
                android:textSize="18dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#333333"
                android:gravity="right"/>
            <TextView
                android:id="@+id/price_list"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:text="가격: priceprice"
                android:textSize="18dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#333333"
                android:gravity="right"/>
            <TextView
                android:id="@+id/location_list"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_marginLeft="18dp"
                android:text="주소: locationlo"
                android:textSize="18dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#333333"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#333333"
        android:layout_marginBottom="10dp"/>

</LinearLayout>