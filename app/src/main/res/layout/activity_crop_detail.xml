<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_background"
    tools:context=".CropDetailActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp" />

    <Button
        android:id="@+id/btn_enroll_back_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"/>

    <ImageView
        android:id="@+id/crops_type"
        android:layout_width="203dp"
        android:layout_height="55dp"
        android:src="@drawable/food_crops_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />
    <View
        android:id="@+id/line"
        android:background="#cdd139"
        android:layout_width="370dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/crops_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/crop_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 시세"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        app:layout_constraintTop_toBottomOf="@id/crop_image_detail"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        android:layout_marginTop="38dp"/>


    <TextView
        android:id="@+id/crops_view_detail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:gravity="right"
        android:textSize="18dp"
        android:textColor="#c0392b"
        android:paddingTop="2dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crop_image_detail" />

    <ImageView
        android:id="@+id/crop_image_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/empty_image"
        app:layout_constraintTop_toBottomOf="@id/tv_contents_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        android:layout_marginTop="38dp"/>

    <TextView
        android:id="@+id/tv_title_detail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/tv_title_detail"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_contents_detail"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@id/tv_title_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_harvest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수확일"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/crops_view_detail"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/tv_harvest_detail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/crops_view_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/tv_harvest_detail"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/tv_price_detail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_harvest_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        app:layout_constraintLeft_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/tv_price_detail"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tv_location_detail"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:textSize="18dp"
        android:textColor="#3C3B3F"
        app:layout_constraintTop_toBottomOf="@id/tv_price_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline3"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_buy"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="구매하기"
        android:backgroundTint="#cdd139"
        app:layout_constraintTop_toBottomOf="@id/tv_location_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>